{% extends 'base.html.twig' %}

{% block title %}Hello ImportGamesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Import Free Games</h1>

    {% if form|default %}
        {{ form_start(form, {'attr': {'class': 'import-games-form'}}) }}
            <div class='form-group'>
                {{ form_widget(form.submit, {'attr': {'class': 'form-control import-game-submit'}}) }}
            </div>
        {{ form_end(form) }}
    {% endif %}
</div>
{% endblock %}
